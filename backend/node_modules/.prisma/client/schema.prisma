generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Developer {
  id        Int    @id @default(autoincrement())
  name      String
  surname   String
  user      User   @relation(fields: [userEmail], references: [email])
  userEmail String
  games     Game[]
}

model Game {
  id          Int         @id @default(autoincrement())
  title       String      @unique
  imageURL    String?
  description String?
  developers  Developer[]
  genres      Genre[]
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  games Game[]
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  developer Developer[]
  password  String
}
